{
  "name": "task-management-api",
  "version": "1.0.0",
  "description": "Task Management API with Express, MongoDB, and AWS S3",
  "main": "dist/main.js",
  "scripts": {
    "build:dev": "tsc",
    "start:dev": "yarn run build:dev && env-cmd -f src/common/environments/.env.dev node dist/main.js",
    "dev": "env-cmd -f src/common/environments/.env.dev ts-node-dev --respawn --transpile-only src/main.ts",
    "test": "env-cmd -f src/common/environments/.env.dev jest",
    "deploy": "cdk deploy",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "aws-sdk": "v2",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-http-context": "^1.2.4",
    "express-rate-limit": "^7.1.4",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^3.2.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
